<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{.CurrentGame}} - {{.Username}}</title>
        <style>{{.Style}}</style>
    </head>
    <body>
        <h1><a href="/" style="text-decoration: none">&lt;</a>Game History</h1>
        <form method="get">
            <select onchange="window.location.href=this.value">
                {{range $index, $game := .Games}}
                <option 
                    {{if eq $game $.CurrentGame}}selected{{end}}
                    value="/u/{{$.Username}}?game={{.}}">{{.}}</option>
                {{end}}
            </select> for {{.Username}}
            <noscript>
                <input type="submit" value="Go">
            </noscript>
        </form>
        <table>
            <thead>
                <tr>
                    <th>Game #</th>
                    <th>Score</th>
                    <th>Posted On</th>
                </tr>
            </thead>
            <tbody>
                {{range .Scores}}
                <tr>
                    <td>{{.GameNumber}}</td>
                    <td>{{.Score}}</td>
                    <td><a href="/c/{{.ChannelID}}?game={{.Game}}">{{.Game}}</a></td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </body>
</html>